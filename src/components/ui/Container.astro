---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["container", className]}>
  <slot />
</div>

<style>
  .container {
    width: 100%;
    max-width: 1200px; /* ou 100% si tu veux plein écran */
    margin: 0 auto; /* centrer si max-width est limité */
    padding: 0 1.5rem;
  }

  @media (max-width: 640px) {
    .container {
      padding: 0 1rem;
    }
  }
</style>

